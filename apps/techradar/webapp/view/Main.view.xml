<mvc:View
	controllerName="com.gavdilabs.techradar.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'com/gavdilabs/techradar/model/formatter'
	}">

	<Page		
		showHeader="false"
		id="page">		
		
		<content>
			<ObjectHeader	
				id="Header"				
				icon="sap-icon://product"
				iconDensityAware="false"				
				imageShape="Circle"			
				responsive="true"
				title="ECCO">							
			</ObjectHeader>	
			<VBox>
				<f:GridContainer id="TechGrid" width="100%" class="sapUiTinyMargin">
					<f:layout>
						<f:GridContainerSettings rowSize="84px" columnSize="300px" />
					</f:layout>
					<List	
						showNoData="false"
						headerText="Stopping"
						id="StoppingList"								
						items="{ 
							path: '/Technology',
							filters : [
								{ path : 'maturityStatus', operator : 'EQ', value1 : 'Stopping'}
							] }">
							<CustomListItem highlight="Error" class="sapUiTinyMargin">
								<VBox class="sapUiTinyMargin">
									<RatingIndicator iconSize="12px" value="{maturityLevel}" editable="false"/>
									<Title text="{name}"></Title>
								</VBox>
							</CustomListItem>
					</List>
					<List
						showNoData="false"
						headerText="Reducing"					
						id="ReducingList"							
						items="{ 
							path: '/Technology',
							filters : [
								{ path : 'maturityStatus', operator : 'EQ', value1 : 'Reducing'}
							] }">
							<CustomListItem highlight="Warning" class="sapUiTinyMargin">
								<VBox class="sapUiTinyMargin">
									<RatingIndicator iconSize="12px" value="{maturityLevel}" editable="false"/>
									<Title text="{name}"></Title>
								</VBox>
							</CustomListItem>						
					</List>
					<List
						showNoData="false"
						headerText="Using"
						id="UsingList"								
						items="{ 
							path: '/Technology',
							filters : [
								{ path : 'maturityStatus', operator : 'EQ', value1 : 'Using'}
							] }">
						<CustomListItem highlight="Success" class="sapUiTinyMargin">
							<VBox class="sapUiTinyMargin">
								<RatingIndicator iconSize="12px" value="{maturityLevel}" editable="false"/>
								<Title text="{name}"></Title>
							</VBox>
						</CustomListItem>							
					</List>
					<List
						showNoData="false"
						headerText="Adopting"
						id="AdoptingList"								
						items="{ 
							path: '/Technology',
							filters : [
								{ path : 'maturityStatus', operator : 'EQ', value1 : 'Adopting'}
							] }">
						<CustomListItem highlight="Information">
							<VBox class="sapUiTinyMargin">
								<RatingIndicator iconSize="12px" value="{maturityLevel}" editable="false"/>
								<Title text="{name}"></Title>
							</VBox>
						</CustomListItem>
					</List>
					<List	
						showNoData="false"
						headerText="Observing"
						id="ObservingList"								
						items="{ 
							path: '/Technology',
							filters : [
								{ path : 'maturityStatus', operator : 'EQ', value1 : 'Observing'}
							] }">
						<CustomListItem highlight="Information">
							<VBox class="sapUiTinyMargin">
								<RatingIndicator iconSize="12px" value="{maturityLevel}" editable="false"/>
								<Title text="{name}"></Title>
							</VBox>
						</CustomListItem>
					</List>
				</f:GridContainer>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Add" type="Emphasized" icon="sap-icon://add" press="addTechnology"/>				
			</OverflowToolbar>
		</footer>
	</Page>

</mvc:View>

<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core">

	<Table	
		class="sapUiSmallMarginBottom"	
		items="{
			path:'/SoftwareTeam',
			sorter: {
				path: 'teamName',
				descending: false
			}
		}" >
		<headerToolbar>
            <OverflowToolbar>
				<Title text="{i18n>lbl_Teams}"/>
                <ToolbarSpacer/>               
               <!--  <Button text="{i18n>addLine}"
                    press="onButtonAddTeamPress"/> -->
            </OverflowToolbar>
        </headerToolbar>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>lbl_Team}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>lbl_Owner}" />
				</header>
			</Column>
			
		</columns>
		<ColumnListItem vAlign="Middle">
			<Text text="{teamName}" />
            <HBox>
                <Avatar src="{_owner/imageUrl}"/>			
                <Text text="{_owner/fullName}" class="sapUiTinyMargin"/>
            </HBox>				
		</ColumnListItem>
	</Table>

    <Table		
		items="{
			path:'/SoftwareTeamUser',
			sorter: {
				path: 'team/teamName',
				descending: false
			}
		}" >
		<headerToolbar>
            <OverflowToolbar>
				<Title text="{i18n>lbl_Users}"/>
                <ToolbarSpacer/>               
               <!--  <Button text="{i18n>addLine}"
                    press="onButtonAddUserPress"/> -->
            </OverflowToolbar>
        </headerToolbar>
		<columns>
			<Column mergeDuplicates="true">
				<header>
					<Text text="{i18n>lbl_Team}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>lbl_User}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="End" >
				<header>
					<Text text="{i18n>lbl_Reviewer}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center" >
				<header>
					<Text text="{i18n>lbl_Maintainer}" />
				</header>
			</Column>			
		</columns>
		<ColumnListItem vAlign="Middle">
			<Text text="{team/teamName}" />
            <HBox>
                <Avatar src="{user/imageUrl}"/>			
                <Text text="{user/fullName}" class="sapUiTinyMargin"/>
            </HBox>
			<CheckBox selected="{reviewer}" editable="false"/>
			<CheckBox selected="{maintainer}" editable="false"/>
		</ColumnListItem>
	</Table>
	 
</c:FragmentDefinition>
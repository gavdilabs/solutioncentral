<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:forms="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

	<Dialog id="CreateTagDialog"
		draggable="true"
		contentWidth="30rem"
		class="sapUiContentPadding"
		title="{i18n>title.createTag}"
	>
		<content>
			<forms:SimpleForm>
				<Label text="{i18n>tag.name}" required="true"/>
				<Input value="{name}" required="true"/>

				<Label text="{i18n>tag.description}" />
				<TextArea value="{descr}" rows="4" required="false" />
			</forms:SimpleForm>
		</content>
		<footer>
			<OverflowToolbar>
				<Button id="createSolutionDialogMessageBtn" press=".openMessageView"
					text="{= ${message>/}.length}"
					icon="{= ${message>/}.length > 0 ? 'sap-icon://error' : 'sap-icon://sys-enter-2'}"
					type="{= ${message>/}.length > 0 ? 'Negative' : 'Ghost'}"
					enabled="{= ${message>/}.length > 0}" />
				<ToolbarSpacer />
				<Button text="{i18n>button.create}" type="Emphasized" press=".handleCreateTagConfirm" />
				<Button text="{i18n>button.cancel}" type="Transparent" press=".handleCreateTagCancel" />
			</OverflowToolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>

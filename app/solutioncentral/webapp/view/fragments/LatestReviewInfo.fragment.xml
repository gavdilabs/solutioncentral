<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:forms="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

	<VBox visible="{= ${path: 'activeVersion/ID', targetType: 'any'} ? false : true}" width="100%"
		height="5rem"
		justifyContent="Center" alignItems="Center">
		<Text text="{i18n>label.noLatestReleaseReview}" />
	</VBox>
	<forms:SimpleForm
		visible="{= ${path: 'activeVersion/ID', targetType: 'any'} ? true : false}"
		columnsM="2"
		columnsL="3"
		columnsXL="4"
		editable="false" layout="ColumnLayout">

		<Label text="{i18n>label.latestReviewDate}" />
		<Text text="{activeVersion/latestReview/createdAt}" />

		<Label text="{i18n>column.codeQualityLevel}" />
		<RatingIndicator editable="false" maxValue="5"
			value="{activeVersion/latestReview/codeQualityRating_code}" />

		<Label text="{i18n>column.cleanCoreLevel}" />
		<RatingIndicator editable="false" maxValue="5"
			value="{activeVersion/latestReview/cleanCoreRating_code}" />

		<Label text="{i18n>column.reasonNotCleanCore}" />
		<Text
			text="{= ${activeVersion/latestReview/reasonNoCleanCore} ? ${activeVersion/latestReview/reasonNoCleanCore} : 'â€“'}" />
	</forms:SimpleForm>
</core:FragmentDefinition>

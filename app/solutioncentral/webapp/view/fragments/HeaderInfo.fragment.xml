<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:forms="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<forms:SimpleForm
		columnsM="2"
		columnsL="3"
		columnsXL="4"
		editable="false" layout="ColumnLayout">
		<core:Title text="Object Information" />

		<Label text="{i18n>column.name}" required="true" />
		<Input id="softwareSolutionNameInput" value="{name}" change=".handleChangeEvent" required="true" />

		<Label text="{i18n>column.tags}"/>
		<MultiComboBox id="solutionTagsSelectionBox" selectionChange=".handleSolutionTagSelectionChange"
			showSecondaryValues="true"
			items="{
				path: '/Tags',
				parameters: {
					$$updateGroupId: 'tagsGroup'
				},
				templateShareable: true
		}">
				<layoutData>
				<forms:ColumnElementData cellsSmall="{= ${activeUserModel>/roles/isMaintainer} || ${activeUserModel>/roles/isAdmin} ? 10 : 12}" cellsLarge="{= ${activeUserModel>/roles/isMaintainer} || ${activeUserModel>/roles/isAdmin} ? 10 : 12}" />
				</layoutData>
			<core:ListItem key="{code}" text="{name}" additionalText="{descr}"/>
		</MultiComboBox>
		<Button icon="sap-icon://add" visible="{= ${activeUserModel>/roles/isMaintainer} || ${activeUserModel>/roles/isAdmin}}" press=".onAddSolutionTag">
				<layoutData>
					<forms:ColumnElementData cellsSmall="2" cellsLarge="2" />
				</layoutData>
		</Button>

		<Label text="{i18n>column.description}" />
		<TextArea value="{description}" rows="4" />

		<Label text="{i18n>column.status}" />
		<Select selectedKey="{solutionStatus_code}" forceSelection="false" items="{/SoftwareStatus}">
			<core:ListItem key="{code}" text="{name}" />
		</Select>

		<Label text="{i18n>column.platform}" />
		<Select selectedKey="{platform_code}" forceSelection="false" items="{/Platform}">
			<core:ListItem key="{code}" text="{name}" />
		</Select>

		<Label text="{i18n>title.hybridSolutions}" />
		<MultiComboBox
			id="hybridSolutionsSelectionBox"
			selectionChange=".handleHybridSolutionsSelectionChange"
			items="{/SoftwareSolution}">
			<core:Item key="{ID}" text="{name}" />
		</MultiComboBox>

		<Label text="{i18n>column.businessCriticality}" />
		<ComboBox showSecondaryValues="true" required="false" selectedKey="{businessCriticality_code}"
			items="{path: '/BusinessCriticalityLevel', sorter: [{ path: 'sortOrder', descending: false }]}">
			<core:ListItem key="{code}" text="{name}" additionalText="{descr}"/>
		</ComboBox>

		<Label text="{i18n>column.riskLevel}" />
		<ComboBox showSecondaryValues="true" required="false" selectedKey="{riskLevel_code}"
			items="{path: '/RiskLevel', sorter: [{ path: 'sortOrder', descending: false }]}">
			<core:ListItem key="{code}" text="{name}" additionalText="{descr}"/>
		</ComboBox>

	</forms:SimpleForm>
</core:FragmentDefinition>

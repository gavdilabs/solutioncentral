                        </content>
                    </OverflowToolbar>
                </headerToolbar>      
                <StandardListItem
                    title="{software/name}"
                    description="{software/description}"/>                                 
            </List> -->
		</content>
		<buttons>
            <Button text="Cancel" press="cancelTechnology"/>
			<Button text="Save" press="saveTechnology"/>
		</buttons>
	</Dialog>
</c:FragmentDefinition>
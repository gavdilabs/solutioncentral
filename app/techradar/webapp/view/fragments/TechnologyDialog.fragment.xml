<c:FragmentDefinition
	xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"	
	xmlns:c="sap.ui.core">
   <Dialog title="Add new technology" contentWidth="1024px">
		<content>
			<form:SimpleForm editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="12"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="2"
                singleContainerFullSize="false" >
                <form:content>
                    <core:Title text="" />
                    <Label text="Name" />
                    <Input value="{name}" />		
                    <Label text="Maturity status" />
                    <Select forceSelection="false" selectedKey="{maturityStatus_code}" 
                    items="{
                        path: '/TechnologyStatus'						
                    }">
                        <core:Item key="{code}" text="{descr}"/>   
                    </Select>
                    <Label text="Maturity level" />
                    <RatingIndicator iconSize="16px" value="{maturityLevel}"/>

                    <core:Title text="" />                    
                    <Label text="Description" />
                    <TextArea rows="3" value="{description}"/>	
                    <Label text="Alternatives" />
                    <MultiComboBox id="TechAlternatives" items="{ path: '/Technology' }" selectionChange="changeTechAlternatives">
					    <core:Item key="{ID}" text="{name}" />                       
                    </MultiComboBox>
                    <Label text="Tag"/>
                    <Select forceSelection="false"  selectedKey="{group_code}"
                        items="{ path: '/TechnologyGroup' }">
                        <core:Item key="{code}" text="{name}"/>
                    </Select>
                </form:content>
			</form:SimpleForm>

           <!--  <List
                noDataText="No software solution using this technology"
                items="{
                    path: '_solutions'
                }">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="Solutions"/>
                            <ToolbarSpacer />

<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"   
    xmlns:fb="sap.ui.comp.filterbar">
    <fb:FilterBar useToolbar="false" search=".filterTechnologies" showClearOnFB="true" clear=".clearTechnologies">
        <fb:filterGroupItems>
            <fb:FilterGroupItem name="technology" label="Technology" groupName="Group1" visibleInFilterBar="true">
                <fb:control>
                     <MultiComboBox id="TechnologyFilter" items="{ path: '/Technology' }">
                        <core:Item key="{ID}" text="{name}" />                       
                    </MultiComboBox>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem name="maturity" label="Maturity" groupName="Group1" visibleInFilterBar="true">
                <fb:control>
                    <Select id="MaturityFilter" forceSelection="false">
                        <items>
                            <core:Item key="1" text="1" /> 
                            <core:Item key="2" text="2" /> 
                            <core:Item key="3" text="3" /> 
                            <core:Item key="4" text="4" /> 
                            <core:Item key="5" text="5" /> 
                        </items>
                    </Select>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem name="tag" label="Tag" groupName="Group1" visibleInFilterBar="true">
                <fb:control>
                    <MultiComboBox id="TechnologyGroupFilter" items="{ path: '/TechnologyGroup' }">
                        <core:Item key="{code}" text="{name}" />                       
                    </MultiComboBox>
                </fb:control>
            </fb:FilterGroupItem>
        </fb:filterGroupItems>
    </fb:FilterBar>



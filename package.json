{
  "name": "techtransition_mgt",
  "version": "1.0.0",
  "description": "Technology Transition Management",
  "repository": "https://bitbucket.org/gavdilabs/techtransition_mgt/src/master/",
  "license": "Apache-2.0",
  "private": true,
  "dependencies": {
    "@cap-js/postgres": "^1.10.4",
    "@dxfrontier/cds-ts-dispatcher": "^3.2.6",
    "@gavdi/caplog": "^2.5.0",
    "@sap/cds": "^8.5.1",
    "express": "^4",
    "npm": "^10.9.2"
  },
  "devDependencies": {
    "@cap-js/cds-typer": "^0.30.0",
    "@cap-js/cds-types": "0.6.4",
    "@cap-js/sqlite": "^1",
    "@types/chai": "^4.3.19",
    "@types/chai-http": "^3.0.5",
    "@types/jest": "^29.5.14",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "chai-http": "^5.1.1",
    "chai-subset": "^1.6.0",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "start": "cds-serve",
    "dev": "cds-ts w",
    "debug": "cds-ts run",
    "test": "jest --silent",
    "test:api": "jest --silent test/api",
    "test:unit": "jest --silent test/unit",
    "lint": "eslint",
    "lint-staged": "lint-staged",
    "format": "prettier --check ./srv",
    "format:ui": "prettier --check ./apps",
    "generate:types": "npx @cap-js/cds-typer '*' --outputDirectory @cds-models",
    "generate:types:windows": "npx @cap-js/cds-typer * --outputDirectory @cds-models",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.json": [
      "prettier --check"
    ],
    "*.ts": [
      "eslint",
      "prettier --check ./srv"
    ],
    "*.js": [
      "eslint",
      "prettier --check ./srv"
    ]
  },
  "cds": {
    "db": {
      "kind": "sqlite",
      "credentials": {
        "database": ":memory:"
      },
      "[pg]": {
        "kind": "postgres",
        "impl": "@cap-js/postgres",
        "dialect": "postgres",
        "credentials": {
          "host": "localhost",
          "port": 5432,
          "user": "postgres",
          "password": "postgres",
          "database": "postgres",
          "dbname": "techtransition_mgt"
        },
        "vcap": {
          "label": "postgresql-db"
        },
        "pool": {
          "min": 0,
          "max": 100,
          "fifo": false
        }
      },
      "[production]": {
        "kind": "postgres",
        "impl": "@cap-js/postgres",
        "dialect": "postgres",
        "vcap": {
          "label": "postgresql-db"
        },
        "pool": {
          "min": 0,
          "max": 100,
          "fifo": false
        }
      }
    }
  },
  "imports": {
    "#dispatcher": "./@dispatcher/index.js",
    "#cds-models/*": "./@cds-models/*/index.js"
  }
}
